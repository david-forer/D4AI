---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome">
	<main>
		<h1>Welcome to <span class="text-gradient">My Site</span></h1>
		<div class="content">
			<p>This is my awesome website built with Astro!</p>
			<div class="features">
				<div class="feature">
					<h3>Fast âš¡</h3>
					<p>Built with speed in mind</p>
				</div>
				<div class="feature">
					<h3>Simple ðŸŽ¯</h3>
					<p>Easy to use and maintain</p>
				</div>
				<div class="feature">
					<h3>Powerful ðŸ’ª</h3>
					<p>All the features you need</p>
				</div>
