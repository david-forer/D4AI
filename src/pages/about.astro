</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 1400px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.content {
		background: #23262d;
		padding: 2rem;
		border-radius: 8px;
	}
	h2 {
		color: rgb(var(--accent-light));
		margin-top: 2rem;
	}
	ul {
		list-style-type: none;
		padding: 0;
	}
	li {
		margin: 0.5rem 0;
		padding-left: 1.5rem;
		position: relative;
	}
