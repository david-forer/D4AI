---
import Layout from '../layouts/Layout.astro';
import LeadMagnet from '../components/LeadMagnet.astro';

// Define the lead magnet configuration for this page
const leadMagnetConfig = {
  title: "Get Our Free Guide",
  description: "Learn how to optimize your website with our comprehensive guide.",
  imageUrl: "/images/guide-cover.jpg",
  formFields: [
    {
      id: "email",
      label: "Email Address",
      inputType: "email" as const,
      required: true,
      placeholder: "you@example.com"
    }
  ],
  ctaText: "Send Me the Guide",
  leadMagnetType: "ebook",
  thankYouMessage: "Your guide is on its way! Please check your email inbox.",
  variant: "fullWidth" as const, // You can choose: inline, card, fullWidth, sidebar
  backgroundColor: "bg-blue-50",
  accentColor: "bg-blue-600"
};
---

<Layout title="About David and AI Operations">
	<main>
		<h1 class="">About <span class="text-gradient">David</span></h1>
		<div class="content">
			<p>Hello! I'm a web developer passionate about creating amazing websites.</p>
			<h2>My Skills</h2>
			<ul>
				<li>Web Development</li>
				<li>UI/UX Design</li>
				<li>Problem Solving</li>
			</ul>
			<h2>Experience</h2>
			<p>I've been working in web development for several years, focusing on creating user-friendly and performant websites.</p>
		</div>
<!-- New Section (Integrated) -->
<div class="py-12 tracking-tight leading-7 md:py-20 text-neutral-900">
	<div class="pb-10 mx-auto max-w-5xl leading-7 text-center md:pb-16">
		<p class="m-0 text-base font-bold tracking-wide leading-6 text-blue-700 uppercase">About us</p>
		<h1 class="mx-0 mt-0 mb-4 font-sans text-5xl font-bold tracking-tighter leading-none md:text-6xl md:leading-none text-white">
			Elevate your online presence with our<br />
			<span class="text-6xl text-violet-700" style="line-height: 75px; letter-spacing: -3.75px;">
				Beautiful Website Templates
			</span>
		</h1>
		<div class="mx-auto max-w-3xl text-center">
			<p class="mx-0 mt-0 mb-6 text-xl text-zinc-600">
				Your custom description here. Tailor it to fit your brand and personality.
			</p>
		</div>
	</div>

	<div class="leading-7">
		<div class="relative m-auto max-w-5xl text-neutral-900">
			<img
				alt="Caos Image"
				class="block object-cover object-center mx-auto w-full max-w-screen-lg h-auto align-middle rounded-md"
				loading="eager"
				src="https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80"
				style="object-fit:cover;object-position:center;max-width:1024px;max-height:576px;aspect-ratio:1.7777777777777777;width:100%"
				width="1024"
				height="576"
			/>
		</div>
	</div>
</div>
<!-- End of New Section -->

  <!-- Place the lead magnet where you want it to appear -->
  <section class="lead-magnet-section py-8">
    <LeadMagnet {...leadMagnetConfig} />
  </section>

<div
  class="relative py-12 px-4 mx-auto max-w-6xl tracking-tight leading-7 lg:py-20 md:px-6 md:py-16"
  data-animated="true"
  style="transition-delay: 0ms; animation-delay: 0ms;"
>
  <div class="flex flex-col gap-8 leading-7 md:flex-row md:gap-12">
    <div class="gap-8 mr-0 w-full lg:mr-16 lg:w-1/2 md:mr-8 md:gap-12">
      <div class="mb-4 text-center md:mx-auto md:mb-8 md:text-left">
        <h2
