---
import Navigation from '../components/Navigation.astro';

interface Props {
  title: string;
  description?: string;
  pubDate?: string | Date;
  tags?: string[]; 
  heroImage?: string;
}

const {
  title,
  description = "AI Operations with David Forer",
  pubDate,
  tags = [],
  heroImage,
} = Astro.props;

const formattedDate = pubDate
  ? new Date(pubDate).toLocaleDateString("en-US", {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  : null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Calendly Inline Popup Widget -->
    <link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
    <script src="https://assets.calendly.com/assets/external/widget.js" async></script>
  </head>

  <body class="bg-white text-gray-900 antialiased">
    <Navigation />

    <main class="w-full">
      <div class="content-wrapper max-w-5xl mx-auto text-2xl leading-relaxed px-4 py-10">
        <!-- Header block sits outside prose to keep utility control -->
        <header class="not-prose mb-8">
          <!-- <h1 class="text-3xl md:text-4xl font-bold tracking-tight">{title}</h1> -->
          {formattedDate && (
            <p class="mt-2 text-sm text-gray-500">{formattedDate}</p>
          )}
          {tags.length > 0 && (
            <div class="mt-3 flex flex-wrap gap-2">
              {tags.map((tag) => (
                <span class="text-xs bg-blue-100 text-blue-700 px-2 py-1 rounded">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </header>

     {heroImage && (
  <img
    src={heroImage}
    alt={title}
    class="w-full rounded-xl mb-6 object-cover"
  />
)}

        <!-- MDX content gets beautiful defaults via typography -->
       <article class="max-w-5xl mx-auto px-4 py-8 space-y-6 text-gray-900 leading-relaxed">
  <slot />
</article>


      </div>
    </main>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';

  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  html, body {
    font-family: system-ui, sans-serif;
    background: #ffffff;
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    min-height: 100vh;
  }

  /* Keep nav styling immune to prose */
  nav a, nav button { text-decoration: none !important; color: inherit !important; }
  nav .bg-blue-600 { background-color: #2563eb !important; color: white !important; }
  nav img { height: 48px !important; width: auto !important; max-width: 200px !important; box-shadow: none !important; filter: none !important; }
  nav { box-shadow: 0 1px 3px 0 rgba(0,0,0,0.1), 0 1px 2px 0 rgba(0,0,0,0.06) !important; }

  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
                 Bitstream Vera Sans Mono, Courier New, monospace;
  }
  
.content-wrapper h1 { @apply text-4xl font-bold; }
.content-wrapper h2 { @apply text-3xl font-semibold; }
.content-wrapper h3 { @apply text-2xl font-semibold; }

</style>
