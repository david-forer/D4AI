---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
interface Props {
	title: string;
	description?: string;
	image?: string;
	type?: "website" | "article";
  datePublished?: string;  // ISO for articles
  dateModified?: string;   // ISO for articles
  authorName?: string;     // for articles
	publisherName?: string;  // for articles
	noindex?: boolean;
}

const siteUrl = "https://davidjforer.com";
const siteName = "David J Forer | AI Operations Consultant";
const defaultImage = "/images/ai-automations.png";
const twitterHandle = "@davidjforer"; // remove tag below if not used

const { 
	title, 
	description = "AI Operations with David Forer",
	image = "/images/ai-automation.png",
	authorName = 'David J Forer',
  publisherName = 'David J Forer',
	noindex = false,
} = Astro.props;

const origin = 'https://davidjforer.com';
const canonical = new URL(Astro.url.pathname, origin).href;
// keep using your existing {title} and {description} props
const robots = noindex ? 'noindex,nofollow' : 'index,follow';
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-8TFRGRQPZ1"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'G-8TFRGRQPZ1');
		</script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />

		<link rel="canonical" href={canonical} />
		<meta name="robots" content={robots} />
		<meta name="author" content={authorName} />
		<meta name="publisher" content={publisherName} />

	
		<!-- Calendly Inline Popup Widget -->
		<link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
		<script src="https://assets.calendly.com/assets/external/widget.js" async></script>

		<!-- TruConversion for davidjforer.com -->
<script type="text/javascript">
    var _tip = _tip || [];
    (function(d,s,id){
        var js, tjs = d.getElementsByTagName(s)[0];
        if(d.getElementById(id)) { return; }
        js = d.createElement(s); js.id = id;
        js.async = true;
        js.src = d.location.protocol + '//app.truconversion.com/ti-js/37589/7faf4.js';
        tjs.parentNode.insertBefore(js, tjs);
    }(document, 'script', 'ti-js'));
</script>

<link rel="icon" href="/favicon.ico" sizes="any">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
                        
	</head>
	<body>
		<Navigation />
		<main>
			<div class="content-wrapper">
				<slot />
			</div>
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	@import '../styles/global.css';
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html, body {
		font-family: system-ui, sans-serif;
		background: #ffffff;
		background-size: cover;
		background-repeat: no-repeat;
		background-attachment: fixed;
		min-height: 100vh; /* Ensures full viewport height coverage */
	}

	/* Add styling for the content wrapper */
	.content-wrapper {
		/*max-width: 1800px;*/ /* Set the maximum width */
		margin: 0; /* Center the content */
		padding: 0; /* Optional: add padding for mobile spacing */
		width: 100%;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	main {
		margin: 0;
		padding: 0;
		width: 100%; 
		/*max-width: 1800px !important;*/
	}	
</style>
