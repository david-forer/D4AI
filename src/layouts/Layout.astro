---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
interface Props {
	title: string;
	description?: string;
	image?: string;
	type?: "website" | "article";
  datePublished?: string;  // ISO for articles
  dateModified?: string;   // ISO for articles
  authorName?: string;     // for articles
}

const siteUrl = "https://davidjforer.com";
const siteName = "David J Forer | AI Operations Consultant";
const defaultImage = "/images/ai-automations.png";
const twitterHandle = "@davidjforer"; // remove tag below if not used

const { 
	title, 
	description = "AI Operations with David Forer",
	image = "/images/ai-automation.png"
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<!-- Calendly Inline Popup Widget -->
<link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
<script src="https://assets.calendly.com/assets/external/widget.js" async></script>
	</head>
	<body>
		<Navigation />
		<main>
			<div class="content-wrapper">
				<slot />
			</div>
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	@import '../styles/global.css';
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html, body {
		font-family: system-ui, sans-serif;
		background: #ffffff;
		background-size: cover;
		background-repeat: no-repeat;
		background-attachment: fixed;
		min-height: 100vh; /* Ensures full viewport height coverage */
	}

	/* Add styling for the content wrapper */
	.content-wrapper {
		/*max-width: 1800px;*/ /* Set the maximum width */
		margin: 0; /* Center the content */
		padding: 0; /* Optional: add padding for mobile spacing */
		width: 100%;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	main {
		margin: 0;
		padding: 0;
		width: 100%; 
		/*max-width: 1800px !important;*/
	}	
</style>
